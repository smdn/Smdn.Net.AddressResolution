<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netstandard2.1;net6.0</TargetFrameworks>
    <VersionPrefix>1.0.0</VersionPrefix>
    <VersionSuffix>preview4</VersionSuffix>
    <!-- <PackageValidationBaselineVersion>1.0.0</PackageValidationBaselineVersion> -->
    <Nullable>enable</Nullable>
    <NoWarn>CA1848</NoWarn> <!-- use the LoggerMessage delegates instead -->
  </PropertyGroup>

  <PropertyGroup Label="assembly attributes">
    <Description>
<![CDATA[A network address resolution library for .NET.
This library provides interfaces for resolving between IP addresses and MAC addresses, also provides implementations of address resolution using the ARP table provided by each platform.
]]>
    </Description>
    <CopyrightYear>2022</CopyrightYear>
  </PropertyGroup>

  <PropertyGroup Label="package properties">
    <PackageTags>ARP;ip-address;mac-address;hardware-address;address-lookup;address-resolution</PackageTags>
  </PropertyGroup>

  <ItemGroup Label="StyleCop code analysis">
    <!-- remove the default file includes by the Smdn.MSBuild.ProjectAssets.Library -->
    <StyleCopJsonFile Include="@(AdditionalFiles->WithMetadataValue('Link', 'stylecop.json'))" />
    <AdditionalFiles Remove="@(StyleCopJsonFile)" />

    <!-- include custom stylecop.json file -->
    <AdditionalFiles Include="stylecop.json" Link="stylecop.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging" Version="6.0.0" />
  </ItemGroup>

</Project>
